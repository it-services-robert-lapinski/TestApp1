<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.robertapiski.testapp1.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:onClick="addProject"
        android:text="Add"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="392dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ListView
        android:id="@+id/projectsList"
        style="@style/Widget.AppCompat.ListView"
        android:layout_width="536dp"
        android:layout_height="209dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="87dp"
        android:layout_height="44dp"
        android:text="Save"
        android:layout_marginRight="28dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:onClick="saveProjectsList"/>

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="354dp"
        android:layout_height="44dp"
        android:text=""
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="7dp" />

</android.support.constraint.ConstraintLayout>
